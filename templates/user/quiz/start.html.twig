{% extends 'user/user.base.html.twig' %}

{% block title %}Commencer un Quiz{% endblock %}

{% block main_class %}items-center justify-center p-4 pt-[88px]{% endblock %}

{% block main %}
    <div class="w-full max-w-md my-8">
        <div class="mb-8 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-accent-purple-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <g transform="translate(3.5 4) scale(0.75)">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                          d="M7.6 8c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01" />
                </g>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <h1 class="text-3xl font-bold text-text-100 mt-4">PrépaLib</h1>
            <p class="text-text-300 mt-2">Commencer un Quiz</p>
        </div>

        <div class="rounded-xl bg-foreground-500 overflow-hidden">
            <div class="p-8">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                {# Poids des difficultés #}
                <div class="space-y-4">
                    <label class="block text-sm font-medium text-text-100 mb-4">Poids des difficultés</label>

                    {# Maîtrisées - Bleu #}
                    <div class="flex flex-col sm:flex-row gap-3 items-center justify-between p-3 rounded-lg bg-foreground-300/30">
                        <div class="flex items-center space-x-3">
                            <div class="difficulty-element {{ form.unknownWeight.vars.value == 0 ? 'text-text-300!' : 'text-accent-blue-500' }} text-lg">
                                <i class="fa-regular fa-grin-stars text-lg"></i>
                            </div>
                            <span class="text-text-100">Maîtrisées</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <button type="button" onclick="updateWeight('{{ form.masteredWeight.vars.id }}', -1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">-</button>
                            {{ form_widget(form.masteredWeight, {'attr': {'class': 'w-16! text-center bg-foreground-400 border-none rounded py-1 text-text-100', 'min': '0'}}) }}
                            <button type="button" onclick="updateWeight('{{ form.masteredWeight.vars.id }}', 1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">+</button>
                        </div>
                    </div>

                    {# Connues - Vert #}
                    <div class="flex flex-col sm:flex-row gap-3 items-center justify-between p-3 rounded-lg bg-foreground-300/30">
                        <div class="flex items-center space-x-3">
                            <div class="difficulty-element {{ form.knownWeight.vars.value == 0 ? 'text-text-300!' : 'text-accent-green-500' }} text-lg">
                                <i class="fa-regular fa-smile text-lg"></i>
                            </div>
                            <span class="text-text-100 font-bold">Connues</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <button type="button" onclick="updateWeight('{{ form.knownWeight.vars.id }}', -1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">-</button>
                            {{ form_widget(form.knownWeight, {'attr': {'class': 'w-16! text-center bg-foreground-400 border-none rounded py-1 text-text-100', 'min': '0'}}) }}
                            <button type="button" onclick="updateWeight('{{ form.knownWeight.vars.id }}', 1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">+</button>
                        </div>
                    </div>

                    {# Familières - Jaune #}
                    <div class="flex flex-col sm:flex-row gap-3 items-center justify-between p-3 rounded-lg bg-foreground-300/30">
                        <div class="flex items-center space-x-3">
                            <div class="difficulty-element {{ form.familiarWeight.vars.value == 0 ? 'text-text-300!' : 'text-accent-yellow-500' }} text-lg">
                                <i class="fa-regular fa-meh text-lg"></i>
                            </div>
                            <span class="text-text-100 font-bold">Familières</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <button type="button" onclick="updateWeight('{{ form.familiarWeight.vars.id }}', -1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">-</button>
                            {{ form_widget(form.familiarWeight, {'attr': {'class': 'w-16! text-center bg-foreground-400 border-none rounded py-1 text-text-100', 'min': '0'}}) }}
                            <button type="button" onclick="updateWeight('{{ form.familiarWeight.vars.id }}', 1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">+</button>
                        </div>
                    </div>

                    {# Inconnues - Rouge #}
                    <div class="flex flex-col sm:flex-row gap-3 items-center justify-between p-3 rounded-lg bg-foreground-300/30">
                        <div class="flex items-center space-x-3">
                            <div class="difficulty-element {{ form.unknownWeight.vars.value == 0 ? 'text-text-300!' : 'text-accent-red-500' }} text-lg">
                                <i class="fa-regular fa-frown text-lg"></i>
                            </div>
                            <span class="text-text-100 font-bold">Inconnues</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <button type="button" onclick="updateWeight('{{ form.unknownWeight.vars.id }}', -1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">-</button>
                            {{ form_widget(form.unknownWeight, {'attr': {'class': 'w-16! text-center bg-foreground-400 border-none rounded py-1 text-text-100', 'min': '0'}}) }}
                            <button type="button" onclick="updateWeight('{{ form.unknownWeight.vars.id }}', 1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">+</button>
                        </div>
                    </div>

                    {# Jamais vues - Violet #}
                    <div class="flex flex-col sm:flex-row gap-3 items-center justify-between p-3 rounded-lg bg-foreground-300/30">
                        <div class="flex items-center space-x-3">
                            <div class="difficulty-element {{ form.neverSeenWeight.vars.value == 0 ? 'text-text-300!' : 'text-accent-purple-500' }} text-lg">
                                <i class="fa-regular fa-dizzy text-lg"></i>
                            </div>
                            <span class="text-text-100 font-bold">Jamais Vues</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <button type="button" onclick="updateWeight('{{ form.neverSeenWeight.vars.id }}', -1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">-</button>
                            {{ form_widget(form.neverSeenWeight, {'attr': {'class': 'w-16! text-center bg-foreground-400 border-none rounded py-1 text-text-100', 'min': '0'}}) }}
                            <button type="button" onclick="updateWeight('{{ form.neverSeenWeight.vars.id }}', 1)" class="simple w-8! h-8 rounded-full bg-foreground-400 text-text-200 hover:bg-foreground-300 transition duration-200 flex items-center justify-center">+</button>
                        </div>
                    </div>
                </div>

                <div>
                    <p class="text-sm text-text-300 text-justify italic">Les questions d'une difficulté avec un poids de 10 ont 2 fois plus de chance d'apparaître que celles avec un poids de 5 et 10 fois plus que celles avec un poids de 1.</p>
                </div>

                {# Nombre de questions #}
                <div>
                    {{ form_label(form.questionCount, null) }}
                    {{ form_widget(form.questionCount) }}
                    {{ form_errors(form.questionCount) }}

                    <p class="text-sm text-text-300 text-justify italic mt-2">Les fiches sélectionnées contiennent au total {{ totalQuestions }} questions. Une question peut être posée plusieurs fois.</p>
                </div>

                <button type="submit">
                    Commencer le quiz
                </button>

                <div class="mt-4 mb-0">
                    <a href="{{ path('app_sheets', {'subject': subject.id}) }}" class="btn alert">Retour</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
        function updateWeight(inputId, change) {
            const input = document.getElementById(inputId);
            let value = parseInt(input.value) || 0;
            value += change;

            if (value < 0) value = 0;

            input.value = value;

            // Mettre à jour la couleur de l'icône
            const icon = input.closest('.flex.items-center.justify-between').querySelector('.difficulty-element i');
            const difficultyElement = input.closest('.flex.items-center.justify-between').querySelector('.difficulty-element');

            if (value === 0) {
                difficultyElement.classList.add('text-text-300!');
            } else {
                difficultyElement.classList.remove('text-text-300!');
            }
        }

        // Initialiser les couleurs au chargement
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('input[type="number"]').forEach(input => {
                const difficultyElement = input.closest('.flex.items-center.justify-between').querySelector('.difficulty-element');
                const value = parseInt(input.value) || 0;

                if (value === 0) {
                    difficultyElement.classList.add('text-text-300!');
                } else {
                    difficultyElement.classList.remove('text-text-300!');
                }
            });
        });
    </script>
{% endblock %}
