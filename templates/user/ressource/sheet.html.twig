{% extends "user/user.base.html.twig" %}

{% block title %}{{ subject.name }} | Fiche | {{ sheet.title }}{% endblock %}

{% block main_class %}items-center p-2 md:p-4 pt-[88px]!{% endblock %}

{% block main %}
    <div class="container px-4 py-8 gap-8 flex flex-col justify-center items-center">
        <div class="text-center">
            <i class="h-16! w-16 {{ subject.faicon }}"></i>
            <h1 class="text-3xl font-bold text-text-100">PrépaLib</h1>
            <h2 class="text-xl font-bold text-text-100 mt-3">{{ subject.name }} — {{ sheet.title }}</h2>
        </div>

        <div class="overflow-x-auto bg-foreground-500 shadow rounded-lg w-full">
            <div class="p-6">
                <twig:SheetTree sheet="{{ sheet }}" :admin="false" backPath="{{ path('app_sheets', {'subject': subject.id}) }}" user="{{ app.user }}"/>
            </div>
        </div>
    </div>
{% endblock %}
