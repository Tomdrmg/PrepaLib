{% extends 'user/user.base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block mainid %}login{% endblock %}

{% block main %}
    <div class="min-h-screen flex items-center justify-center bg-gray-900 p-4 pt-[116px]">
        <div class="w-full max-w-md">
            <div class="mb-8 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" />
                </svg>
                <h1 class="text-3xl font-bold text-white mt-4">PrépaLib</h1>
                <p class="text-gray-400 mt-2">Connectez-vous pour accéder aux ressources</p>
            </div>

            <div class="form-card">
                <div class="p-8">
                    {% if error %}
                        <div class="mb-4 p-3 bg-red-900/30 border border-red-700 text-red-300 rounded-lg text-sm">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" class="space-y-6">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div>
                            <label for="inputEmail">Email</label>
                            <input id="inputEmail" name="_username" type="email" autocomplete="email" required
                                   placeholder="votre@email.com" value="{{ last_username }}">
                        </div>

                        <div>
                            <label for="inputPassword">Mot de passe</label>
                            <input id="inputPassword" name="_password" type="password" autocomplete="current-password" required
                                   placeholder="••••••••">
                        </div>

                        <div>
                            <label class="flex items-center space-x-2 cursor-pointer select-none">
                                <input
                                    type="checkbox"
                                    name="_remember_me"
                                    checked
                                    class="h-4 w-4 text-indigo-600 bg-gray-700 border-gray-600 rounded focus:ring-indigo-500 focus:ring-2 transition">
                                <span class="text-gray-300 text-sm">Se souvenir de moi</span>
                            </label>
                        </div>

                        <button type="submit">
                            Se connecter
                        </button>
                    </form>
                </div>
                <div class="px-8 py-2 bg-gray-700/50 border-t border-gray-700 text-center flex flex-col">
                    <div>
                        <a href="{{ path('app_register') }}" class="text-gray-400 hover:text-gray-300 text-sm transition">Vous n'avez pas de compte ? En créer un</a>
                    </div>
                    <div class="mb-2">
                        <a href="{{ path('app_login') }}" class="text-gray-400 hover:text-gray-300 text-sm transition duration-500">Mot de passe oublié</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
